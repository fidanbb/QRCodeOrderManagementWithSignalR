@model List<ResultContactDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Home Page Footer Contact Operations</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Contact List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform contact-related operations below: Don't forget to create only <strong>one</strong>  contact
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Location</th>
									<th scope="col">Phone</th>
									<th scope="col">Mail</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
								
										<td>
											<a asp-controller="Contact" asp-action="DeleteContact" asp-route-id="@item.ContactID" class="btn btn-outline-danger btn-rounded"
											   onclick="return confirm('Are you sure you want to delete this contact?')">Delete</a>
										</td>
										<td><a asp-controller="Contact" asp-action="UpdateContact" asp-route-id="@item.ContactID" class="btn btn-outline-success btn-rounded">Update</a></td>
									</tr>
								}


							</tbody>
						</table>
						<a asp-controller="Contact" asp-action="CreateContact" class="btn btn-outline-primary">Add New Contact</a>

					</div>
				</div>



			</div>
		</div>
	</div>
</div>