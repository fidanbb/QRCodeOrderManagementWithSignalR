@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Home Page Footer Contact Opeartions</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update Contact</div>
                        </div>
                        <input type="hidden" asp-for="ContactID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="location">Update Location</label>
                                <input type="text" class="form-control" asp-for="Location" id="location">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="phone">Update Phone</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="mail">Update Mail</label>
                                <input type="email" class="form-control" asp-for="Mail" id="mail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="desciption">Update Description</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Update Contact</button>
                            <a asp-controller="Contact" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>