
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
@await Component.InvokeAsync("_UILayoutHeadComponentPartial");

<body class="sub_page">

    <div class="hero_area">

        <!-- header section strats -->
        @await Component.InvokeAsync("_UILayoutNavbarComponentPartial");
        <!-- end header section -->
    </div>

    <!-- food section -->
    <section class="food_section layout_padding-bottom">
        <div class="container mt-5">


            <div class="row">
                <div class="col-12">
                    <h3 class="text-center mb-4">Feane Restaurant Instant Messaging</h3>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-2">Your UserName:</div>
                <div class="col-5">
                    <input type="text" id="userinput" class="form-control" />
                </div>
            </div>

            <div class="row p-1">
                <div class="col-2">Your Message:</div>
                <div class="col-5">
                    <textarea rows="5" type="text" class="form-control" id="messageinput"></textarea>
                   @*  <input type="text" class="form-control" id="messageinput" /> *@
                </div>
            </div>

            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-3">
                    <input type="button" id="sendbutton" value="Send Message" class="btn btn-warning" />
                </div>
            </div>

            <div class="row p-1">
                <div class="col-12">
                    <hr />
                </div>
            </div>

            <div class="row p-1">
                <div class="col-12">
                    <ul id="messagelist" class="list-group"></ul>
                </div>
            </div>


        </div>
    </section>

    <!-- end food section -->
    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutFooterComponentPartial");
    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial");

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
   
  

</body>

</html>

