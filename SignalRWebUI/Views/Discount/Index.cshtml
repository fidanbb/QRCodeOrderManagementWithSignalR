@model List<ResultDiscountDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Discounts of the Day Operations</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Discounts of the Day List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform discount-related operations below: Please only choose <strong>2</strong> discounted item for theme integrity
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Product</th>
									<th scope="col">Discount Rate</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
									<th scope="col">Make Active</th>
									<th scope="col">Make Passive</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td>@item.Status</td>
										<td>
											<a asp-controller="Discount" asp-action="DeleteDiscount" asp-route-id="@item.DiscountID" class="btn btn-outline-danger btn-rounded"
											   onclick="return confirm('Are you sure you want to delete this discount?')">Delete</a>
										</td>
										<td><a asp-controller="Discount" asp-action="UpdateDiscount" asp-route-id="@item.DiscountID" class="btn btn-outline-success btn-rounded">Update</a></td>
										<td><a href="/Discount/ChangeStatusToTrue/@item.DiscountID" class="btn btn-outline-warning">Make Active</a></td>
										<td><a href="/Discount/ChangeStatusToFalse/@item.DiscountID" class="btn btn-outline-dark">Make Passive</a></td>
									</tr>
								}


							</tbody>
						</table>
						<a asp-controller="Discount" asp-action="CreateDiscount" class="btn btn-outline-primary">Add New Discount</a>

					</div>
				</div>



			</div>
		</div>
	</div>
</div>