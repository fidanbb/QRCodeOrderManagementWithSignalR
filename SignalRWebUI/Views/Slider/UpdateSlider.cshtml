@model UpdateSliderDto
@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Slider Opeartions</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Updating Slider</div>
                        </div>
                        <input type="hidden" asp-for="SliderID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Enter Title</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Enter Description</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="description"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Enter Row</label>
                                <input type="text" class="form-control" asp-for="Row" id="title">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Update Slider</button>
                            <a asp-controller="Slider" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>