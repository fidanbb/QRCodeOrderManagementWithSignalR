@model LoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Feane Restoran Login Page</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Sauce1.jpg" alt="form" style="width:484px; height:584px">
			</div>
			<form class="form-detail" method="post">
				<h2>Login Form</h2>
				<div class="form-row">
					<input type="text" id="full-name" asp-for="Username" class="input-text" placeholder="Your Username" required>
				</div>
				<div class="form-row">
					<input type="password" id="password" class="input-text" placeholder="Your Password" asp-for="Password" required>
				</div>

				<button class="btn btn-dark register">Login</button>
				<p  style="margin-top:30px; color:#333; font-size:15px; opacity:.8">Don't have an account ? 
					<a href="/Register/Index" style="color:#333; font-size:15px;text-decoration:none;font-style: italic;
             font-weight: 900;">Register Here</a></p>
			</form>
			
		</div>
	</div>
</body>
</html>
