@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Category Operations</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Cateogry List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform category-related operations below:
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Category Name</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.CategoryId</td>
										<td>@item.CategoryName</td>
										<td>@item.Status</td>
										<td><a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.CategoryId" class="btn btn-outline-danger" 
											onclick="return confirm('Are you sure you want to delete this category?')">Delete</a></td>
										<td><a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.CategoryId" class="btn btn-outline-success">Update</a></td>
									</tr>
								}
							
								
							</tbody>
						</table>
						<a asp-controller="Category" asp-action="CreateCategory" class="btn btn-outline-primary">Add New Category</a>

					</div>
				</div>



			</div>
		</div>
	</div>
</div>