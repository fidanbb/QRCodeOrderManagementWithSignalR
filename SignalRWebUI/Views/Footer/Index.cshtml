@model List<ResultFooterDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Home Page About Operations</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">About List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform about-related operations below: Don't forget to create only one about
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Title</th>
									<th scope="col">Description</th>
									<th scope="col">Opening Days</th>
									<th scope="col">Opening Hours</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.FooterID</td>
										<td>@item.Title</td>
										<td>@item.Description.Substring(0,item.Description.Length/2)</td>
										<td>@item.OpeningDays</td>
										<td>@item.OpeningTimes</td>
										<td>
											<a asp-controller="Footer" asp-action="DeleteFooter" asp-route-id="@item.FooterID" class="btn btn-outline-danger btn-rounded"
											   onclick="return confirm('Are you sure you want to delete this footer?')">Delete</a>
										</td>
										<td><a asp-controller="Footer" asp-action="UpdateFooter" asp-route-id="@item.FooterID" class="btn btn-outline-success btn-rounded">Update</a></td>
									</tr>
								}


							</tbody>
						</table>
						<a asp-controller="Footer" asp-action="CreateFooter" class="btn btn-outline-primary">Add New Footer</a>

					</div>
				</div>



			</div>
		</div>
	</div>
</div>

