@model List<ResultMenuTableDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Table Operations</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Table List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform Table-related operations below:
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Table Name</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Name</td>
										<td><a href="/MenuTable/DeleteMenuTable/@item.MenuTableID" class="btn btn-outline-danger btn-rounded"
											   onclick="return confirm('Are you sure you want to delete this table?')">Delete</a>
										</td>
										<td><a href="/MenuTable/UpdateMenuTable/@item.MenuTableID" class="btn btn-outline-success btn-rounded">Update</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/MenuTable/CreateMenuTable/" class="btn btn-outline-primary">Add New Table</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
