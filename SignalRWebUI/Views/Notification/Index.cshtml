@model List<ResultNotificationDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Bildimler ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Description</th>
									<th scope="col">Date</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
									<th scope="col">Mark as Read</th>
									<th scope="col">Mark as Unread</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										<td><a href="/Notification/DeleteNotification/@item.NotificationID" class="btn btn-outline-danger btn-rounded"
											   onclick="return confirm('Are you sure you want to delete this notification?')">Delete</a>
										</td>
										<td><a href="/Notification/UpdateNotification/@item.NotificationID" class="btn btn-outline-success btn-rounded">Update</a></td>
										<td><a href="/Notification/NotificationStatusChangeToTrue/@item.NotificationID" class="btn btn-outline-warning btn-rounded">Read</a></td>
										<td><a href="/Notification/NotificationStatusChangeToFalse/@item.NotificationID" class="btn btn-outline-secondary btn-rounded">Unread</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Notification/CreateNotification/" class="btn btn-outline-primary btn-rounded">Add New Notification</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>