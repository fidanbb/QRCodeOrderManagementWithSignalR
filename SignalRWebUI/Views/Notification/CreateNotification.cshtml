@model CreateNotificationDto
@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Notification Operations</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Add New Notification</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Please Enter Notification Type</label>
                                <input type="text" class="form-control" asp-for="Type" id="categoryname">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Please Enter Notification Icon</label>
                                <input type="text" class="form-control" asp-for="Icon" id="categoryname">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Please Enter Notification Description</label>
                                <input type="text" class="form-control" asp-for="Description" id="categoryname">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Date">Please Enter Notification Date</label>
                                <input type="datetime-local" class="form-control" asp-for="Date" id="Date">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Add Notfication</button>
                            <a asp-controller="Notification" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

