@model SignalRWebUI.Models.Footer.FooterViewModel

<footer class="footer_section">
    <div class="container">
        <div class="row">
            <div class="col-md-4 footer-col">
                <div class="footer_contact">
                    <h4>
                        Contact Us
                    </h4>
                    <div class="contact_link_box">
                        <a href="">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>
                                @Model.Contact.Location
                            </span>
                        </a>
                        <a href="">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>
                                Call @Model.Contact.Phone
                            </span>
                        </a>
                        <a href="">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>
                               @Model.Contact.Mail
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 footer-col">
                <div class="footer_detail">
                    <a href="/Default/Index" class="footer-logo">
                       @Model.Footer.Title
                    </a>
                    <p>
                       @Model.Footer.Description
                    </p>
                    <div class="footer_social">
                        @foreach (var item in Model.SocialMedias)
                        {
                            <a href="@item.Url">
                                <i class="@item.Icon" aria-hidden="true"></i>
                            </a>
                        }
                       
                    
                    </div>
                </div>
            </div>
            <div class="col-md-4 footer-col">
                <h4>
                    Opening Hours
                </h4>
                <p>
                    @Model.Footer.OpeningDays
                </p>
                <p>
                    @Model.Footer.OpeningTimes
                </p>
            </div>
        </div>
        <div class="footer-info">
            <p>
                &copy; <span id="displayYear"></span> All Rights Reserved By
                <a href="https://html.design/">SignalR Restaurant</a><br><br>
                &copy; <span id="displayYear"></span> Distributed By
                <a href="https://themewagon.com/" target="_blank">ThemeWagon</a>
            </p>
        </div>
    </div>
</footer>