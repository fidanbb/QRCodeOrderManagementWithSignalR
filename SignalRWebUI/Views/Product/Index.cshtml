@model List<ResultProductDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Product Operations</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Product List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform product-related operations below:
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Product Name</th>
									<th scope="col">Price</th>
									<th scope="col">Category</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ProductId</td>
										<td>@item.ProductName</td>
										<td>@item.Price</td>
										<td>@item.CategoryName</td>
										<td>@item.ProductStatus</td>
										<td>
											<a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.ProductId" class="btn btn-outline-danger btn-rounded"
											   onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
										</td>
										<td><a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.ProductId" class="btn btn-outline-success btn-rounded">Update</a></td>
									</tr>
								}


							</tbody>
						</table>
						<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outline-primary">Add New Product</a>

					</div>
				</div>



			</div>
		</div>
	</div>
</div>